<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SupportFragment"
    android:orientation="vertical">
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:text="Create Team"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:textColor="#8B8B8B"
        android:text="Per referral: â‚¹20"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        app:cardCornerRadius="5dp"
        android:layout_marginHorizontal="10dp"
        app:cardElevation="1px"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <RelativeLayout
            android:background="#F6F6F6"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/r_c"
                android:textSize="18sp"
                android:text="Referral Code:"
                android:layout_marginStart="30dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/my_refer_code"
                android:layout_toEndOf="@id/r_c"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
               android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="https://www.google.com/page/register/?id=24326"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        app:cardCornerRadius="5dp"
        android:layout_marginHorizontal="10dp"
        app:cardElevation="1px"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <RelativeLayout
            android:background="#F6F6F6"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/share_refer_code_button"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/button_buy"
                android:text="Share"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="17sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>



    <TextView
        android:layout_marginStart="10dp"
        android:layout_marginTop="60dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Customer Support"
        android:textSize="17sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:textColor="#8B8B8B"
        android:text="Customer service hours: 8:00 am to 11:00 pm every day"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="5dp"
        android:layout_marginHorizontal="10dp"
        app:cardElevation="1px"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <LinearLayout
            android:weightSum="3"
            android:background="#F6F6F6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/service_rl"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginTop="20dp"
                    android:id="@+id/service"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/telegram"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:contentDescription="@string/app_name" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="2dp"
                    android:layout_below="@id/service"
                    android:textColor="@color/white"
                    android:background="@drawable/term_plan"
                    android:text="Service"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/chat_service_rl"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginTop="20dp"
                    android:id="@+id/chat_service"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/telegram"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:contentDescription="@string/app_name" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="2dp"
                    android:layout_below="@id/chat_service"
                    android:textColor="@color/white"
                    android:background="@drawable/term_plan"
                    android:text="Chat Service"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/group_service_rl"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginTop="20dp"
                    android:id="@+id/group_service"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/telegram"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:contentDescription="@string/app_name" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="2dp"
                    android:layout_below="@id/group_service"
                    android:textColor="@color/white"
                    android:background="@drawable/term_plan"
                    android:text="Group"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>