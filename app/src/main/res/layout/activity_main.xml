<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:paddingHorizontal="10dp"
        app:itemTextAppearanceInactive="@style/Widget.Material3.CircularProgressIndicator.ExtraSmall"
        app:itemTextAppearanceActive="@style/Widget.Material3.CircularProgressIndicator.ExtraSmall"
        app:itemPaddingTop="5dp"
        app:itemPaddingBottom="15dp"
        app:itemIconTint="#F37A1D"
        app:itemTextColor="#F37A1D"
        android:background="#EFF4FA"
        app:elevation="80dp"
        app:itemIconSize="20dp"
        app:itemActiveIndicatorStyle="@style/Widget.Material3.BottomNavigationView.ActiveIndicator"
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:itemRippleColor="#00FDE7D2"
        app:menu="@menu/bottom_navigation"
        />
</androidx.constraintlayout.widget.ConstraintLayout>