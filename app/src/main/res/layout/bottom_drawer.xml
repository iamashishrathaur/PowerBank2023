<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/dialog_image"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:contentDescription="@string/app_name" />
        <TextView
            android:id="@+id/dialog_product_name"
            android:text="Aruo-400"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/dialog_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/dialog_top_total"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp"
            android:text="₹ 240.0"
            android:textColor="@color/app_color"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
<androidx.cardview.widget.CardView
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="30dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp"
    android:layout_width="match_parent"
    android:layout_height="110dp">
    <RelativeLayout
        android:background="#F0F0F0"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/dialog_total_amount"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/app_color"
            android:text="₹ 2400.0"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_below="@id/dialog_total_amount"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:text="Total Amount"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/dialog_daily_amount"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="45dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/app_color"
            android:textSize="16sp"
            android:text="₹ 240.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_below="@id/dialog_total_amount"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:text="Daily"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_close"
            android:layout_marginBottom="5dp"
            android:text="Close"
            android:textColor="#F37A1D"
            android:background="@drawable/button_close"
            android:layout_marginStart="20dp"
            android:layout_width="150dp"
            android:layout_height="45dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_buy"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button_buy"
            android:text="Buy"
            android:textColor="@color/white" />
    </RelativeLayout>
</LinearLayout>